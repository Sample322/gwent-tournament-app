# ============================================
# GWENT Tournament App - Конфигурация
# ============================================

# Окружение (development или production)
NODE_ENV=production

# Порт и хост сервера
PORT=3000
HOST=0.0.0.0

# ============================================
# БАЗА ДАННЫХ PostgreSQL (Timeweb Cloud)
# ============================================
# 
# Вариант 1: Единая строка подключения (рекомендуется)
# Формат: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
#
DATABASE_URL=postgresql://gen_user:YOUR_PASSWORD@YOUR_HOST.timeweb.cloud:5432/default_db

# Вариант 2: Отдельные переменные (альтернатива)
# DB_HOST=YOUR_HOST.timeweb.cloud
# DB_PORT=5432
# DB_NAME=default_db
# DB_USER=gen_user
# DB_PASSWORD=YOUR_PASSWORD

# SSL для базы данных (true для Timeweb Cloud)
DATABASE_SSL=true

# ============================================
# CORS и безопасность
# ============================================
# Для разработки: *
# Для продакшена: https://your-app.timeweb.cloud
CORS_ORIGIN=*

# API ключ для административных эндпоинтов
# ВАЖНО: Сгенерируйте уникальный ключ!
# Можно использовать: openssl rand -hex 32
ADMIN_API_KEY=your-secure-api-key-here-change-me

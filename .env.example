# Окружение
NODE_ENV=production

# Сервер
PORT=3000
HOST=0.0.0.0

# MongoDB Atlas (замените на ваши данные)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gwent?retryWrites=true&w=majority

# CORS (для продакшена укажите домен, например: https://your-app.timeweb.cloud)
CORS_ORIGIN=*

# API ключ для админских эндпоинтов (сгенерируйте уникальный ключ)
ADMIN_API_KEY=your-secure-api-key-here
